<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <org.sefaria.sefaria.layouts.SefariaTextView
            android:id="@+id/enVerseNum"
            android:textColor="?text_verse_num_color"
            android:layout_width="@dimen/text_activity_nums_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/side_by_side_layout"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="@dimen/text_activity_numbering_padding"
            android:gravity="center"
            android:textSize="12sp"
            android:text="26"/>
        <LinearLayout
            android:id="@+id/side_by_side_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <org.sefaria.sefaria.layouts.SefariaTextView
                android:paddingTop="@dimen/text_activity_between_segment_padding"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:paddingBottom="@dimen/text_activity_between_segment_padding"
                android:id="@+id/he"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_activity_main_margin"
                android:layout_marginRight="0dp"
                android:textColor="?text_color_main"
                android:gravity="right"
                android:text="וְהָאָ֗רֶץ הָיְתָ֥ה תֹ֙הוּ֙ וָבֹ֔הוּ וְחֹ֖שֶׁךְ עַל־פְּנֵ֣י תְה֑וֹם וְר֣וּחַ אֱלֹהִ֔ים מְרַחֶ֖פֶת עַל־פְּנֵ֥י הַמָּֽיִם׃"/>
            <org.sefaria.sefaria.layouts.SefariaTextView
                android:paddingBottom="@dimen/text_activity_between_segment_padding"
                android:paddingLeft="7dp"
                android:paddingRight="10dp"
                android:paddingTop="@dimen/text_activity_between_segment_padding"
                android:id="@+id/en"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/text_activity_main_margin"
                android:textColor="?text_color_english"
                android:gravity="left"
                android:text="Now the earth was unformed and void, and darkness was upon the face of the deep; and the spirit of God hovered over the face of the waters."/>

        </LinearLayout>
        <org.sefaria.sefaria.layouts.SefariaTextView
            android:id="@+id/heVerseNum"
            android:textColor="?text_verse_num_color"
            android:layout_width="@dimen/text_activity_nums_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/side_by_side_layout"
            android:paddingLeft="0dp"
            android:paddingTop="@dimen/text_activity_numbering_padding"
            android:gravity="center"
            android:textSize="12sp"
            android:text="26"/>
    </RelativeLayout>

    <org.sefaria.sefaria.TextElements.TextChapterHeader
        android:id="@+id/chapHeader"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </org.sefaria.sefaria.TextElements.TextChapterHeader>

</LinearLayout>