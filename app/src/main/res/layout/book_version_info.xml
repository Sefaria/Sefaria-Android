<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <org.sefaria.sefaria.layouts.SefariaTextView
        android:id="@+id/versionInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="William Davidson Edition - English"
        android:textColor="?text_color_main"
        app:lang="system"
        app:isSerif="true"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:padding="2dp"
        android:layout_marginTop="20dp"
        />
    <org.sefaria.sefaria.layouts.SefariaTextView
        android:id="@+id/copyRightInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.korenpub.com  CC-BY-NC"
        android:textColor="?text_color_faded"
        app:lang="system"
        app:isSerif="false"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="1dp"
        />
    <org.sefaria.sefaria.layouts.SefariaTextView
        android:id="@+id/versionInfoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/william_d_tal_long_info"
        android:textColor="?text_color_faded"
        app:lang="system"
        app:isSerif="true"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="4dp"
        />


</LinearLayout>