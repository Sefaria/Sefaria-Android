
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?text_bg"
        tools:context="org.sefaria.sefaria.activities.TextActivity">

        <LinearLayout
            android:id="@+id/actionbarRoot"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="40dp"></LinearLayout>
        <LinearLayout
        android:id="@+id/searchBarRoot"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="40dp"></LinearLayout>

        <LinearLayout
            android:id="@+id/textMenuRoot"
            android:orientation="horizontal"
            android:layout_below="@+id/actionbarRoot"
            android:layout_width="match_parent"
            android:translationZ="20dp"
            android:background="@color/menu_background"
            android:layout_height="wrap_content"></LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/actionbarRoot">
            <org.sefaria.sefaria.layouts.ListViewExt
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/halkhah"
                    android:layout_gravity="center"
                    />
            </FrameLayout>

        </FrameLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/linkRoot"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="?link_bg"
            android:layout_alignParentBottom="true"/>


